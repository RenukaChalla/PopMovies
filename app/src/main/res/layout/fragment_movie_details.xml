<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/movie_details_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/movie_details_poster_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="200dp"
                android:scaleType="centerCrop"
                android:text="New movie" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/movie_details_release_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="95-94-2015" />

                <TextView
                    android:id="@+id/movie_details_rating_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.3/10" />

                <TextView
                    android:id="@+id/movie_details_duration_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120 min" />

                <Button
                    android:id="@+id/favorite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/movie_details_overview_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="overview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/movie_details_trailers_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trailers" />

            <TextView
                android:id="@+id/movie_details_trailer1_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trailer1" />

            <TextView
                android:id="@+id/movie_details_trailer2_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trailer2" />
        </LinearLayout>

    </LinearLayout>


    <!--<ImageView-->
